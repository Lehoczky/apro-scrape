{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    ".eslintrc.*",
    "electron.vite.config.*",
    "electron-builder.config.*",
    "tailwind.config.*",
    "vitest.config.*",
    "src/main/*",
    "src/preload/*",
    "src/shared/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
